extends layout

block content
	div.navbar.navbar-default.navbar-fixed-top(role='navigation')
		.container.site-title
				.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
	
					//- .navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						h1 Onyx Holistic Services
			.navbar-collapse.collapse
				ul.nav.navbar-nav.site-tabs
					li
						a.header-links(href='/') Home
					li
						a.header-links(href='/contact') Contact
					li
						a.header-links(href='/contactemail') Contact Email
					li
						a.header-links(href='/bradley') Services
						// put a drop down list here under services





	div.container.panel.panel-default.contact-panel
		.panel-heading
			h3.panel-title Contact Me
		.panel-body
			form.form-horizontal
				.form-group
					label.col-sm-2.control-label(for='inputPassword3') Name
					.col-sm-10
						input#inputName3.form-control(type='text', placeholder='Full Name')
				.form-group
					label.col-sm-2.control-label(for='inputEmail3') Email
					.col-sm-10
						input#inputEmail3.form-control(type='email', placeholder='Email')
				.form-group
					.col-sm-offset-2.col-sm-10
						.checkbox
						label
							input(type='checkbox')
							|  Remember me
				.row
					.col-sm-offset-2.col-sm-10
						textarea.form-control(rows='6')

				.form-group.contact-button
					.col-sm-offset-2.col-sm-10
						button.btn.btn-default(type='submit') Submit
